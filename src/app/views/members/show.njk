{% extends "layout.njk" %}

{% block content %}
    <form class="card" method='POST' action='/members'>
        <section class="avatar" style="background:url({{member.avatar_url}}) no-repeat center center/ cover"></section>
        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="items">
                <div>member</div>
                <div>
                    {{member.name}}
                </div>
            </div>

            <div class="items">
                <div>Sexo</div>
                <div>
                    <span>{{'Masculino'if member.gender=='M' else 'Feminino'}}</span>
                </div>
            </div>

            <div class="items">
                <div>Aniversário</div>
                <div>
                    {{member.birth}}
                </div>
            </div>

            <div class="items">
                <div>Especialidade</div>
                <div>
                    {{member.services}}
                </div>
            </div>

            <div class="items">
                <div>Peso (kg)</div>
                <div>
                    {{member.weight}}
                </div>
            </div>

               <div class="items">
                <div>Altura (cm)</div>
                <div>
                    {{member.height}}
                </div>
            </div>

            <div class="items">
                <div>Tipo Sanguíneo</div>
                <div>
                    {{member.blood}}
                </div>
            </div>


            <a href="/members/{{member.id}}/edit" class='button'>Editar</a>
          

    </section>
</form>

{% endblock content %}