{% extends "layout.njk" %}

{% block content %}
    <form class="card" method='POST' action='/instructors'>
        <section class="avatar" style="background:url(https://source.unsplash.com/collection/8353395/500x500) no-repeat center center/ cover"></section>
        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="items">
                <div>Avatar_Url</div>
                <div>
                    <input type="url" name="avatar_url" placeholder='http://'>
                </div>
            </div>

            <div class="items">
                <div>Instructor</div>
                <div>
                    <input type="text" name="name">
                </div>
            </div>

            <div class="items">
                <div>Sexo</div>
                <div>
                    <span><input type="radio" name="gender" value='M' checked="checked">Masculino</span>
                    <span><input type="radio" name="gender" value='F'>Feminino</span>
                </div>
            </div>

            <div class="items">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="items">
                <div>Especialidade</div>
                <div>
                    <input type="text" name="services">
                </div>

            </div>
            <button type='submit'>Salvar</button>

    </section>
</form>

{% endblock content %}