{% extends "layout.njk" %}

{% block content %}
    <form class="card" method='POST' action='/instructors'>
        <section class="avatar" style="background:url({{instructor.avatar_url}}) no-repeat center center/ cover"></section>
        <section class="details">
            <h3>Novo Instrutor</h3>

            <div class="items">
                <div>Instructor</div>
                <div>
                    {{instructor.name}}
                </div>
            </div>

            <div class="items">
                <div>Sexo</div>
                <div>
                    <span>{{'Masculino'if instructor.gender=='M' else 'Feminino'}}</span>
                </div>
            </div>

            <div class="items">
                <div>Idade</div>
                <div>
                    {{instructor.age}}
                </div>
            </div>

            <div class="items">
                <div>Especialidade</div>
                <div>
                    {% for service in instructor.services%}
                        <span>{{service}}</span>
                    {% endfor %}
                </div>

            </div>

               <div class="items">
                <div>Desde:</div>
                <div>
                    {{instructor.created_at}}
                </div>
            </div>


            <a href="/instructors/{{instructor.id}}/edit" class='button'>Editar</a>
          

    </section>
</form>

{% endblock content %}